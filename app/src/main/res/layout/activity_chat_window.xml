<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatWindowActivity">
    <ImageView
        android:id="@+id/messages_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/msg_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/messages_profile_image"
        android:text="TextView"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="50dp"
        android:padding="15dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/messages_profile_image" />

    <ImageView
        android:id="@+id/msg_imageView"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/msg_txt"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        android:layout_alignLeft="@id/msg_txt"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
